    <div id="home"></div><div id="all"></div>
	<div id="findings"></div>
    <div id="findingstopic"></div>
    
    <script type="text/javascript">

      //console.debug('lastfindings.xml');
      //console.debug('version 13');

      var gadgetHelper = null;
      var prefs = new _IG_Prefs(); // User preferences
      var urlTable = prefs.getString("_table_query_url");

      _IG_RegisterOnloadHandler(loadVisualizationAPI);

      function loadVisualizationAPI() {
        google.load("visualization", "1", {"packages": ["table"]});
        google.setOnLoadCallback(sendQuery);
      }

      function sendQuery() {
        gadgetHelper = new google.visualization.GadgetHelper();
        //var query = gadgetHelper.createQueryFromPrefs(prefs);
        var opts = {dataType:'jsonp'};

        var query = new google.visualization.Query(urlTable, opts);
        var topic = gadgets.util.getUrlParameters()["parent"].split("=");
		var situation = gadgets.util.getUrlParameters()["parent"];
		if(situation.indexOf('topic')== -1){
		document.getElementById("home").innerHTML = "<h2>Last <span>Findings</span></h2>";
		document.getElementById("all").innerHTML = '<a target="_parent" href="https://sites.google.com/a/bbva.com/findings/home/topics">View all topics</a></div>';
        var querytosend = "select max(D),A,C,L,G,R,Y group by A,C,L,G,R,Y order by max(D) desc limit 4";
		}else{
		document.getElementById("findings").innerHTML = "<h2>Last <span>Findings</span></h2>";
		var querytosend = "select max(D),A,C,L,G,R,Y where A like '%"+topic[1]+"%'group by A,C,L,G,R,Y order by max(D)  desc ";
		}
        query.setQuery(querytosend);
        query.send(handleQueryResponse);
      }

      function handleQueryResponse(response) {
        if (!gadgetHelper.validateResponse(response)) { return; }
        data = response.getDataTable();
        //console.debug('data.getNumberOfRows(): ' + data.getNumberOfRows());
        filas = data.getNumberOfRows();
        for(var i = 0; i < filas; i++) {
          var html = "";
          if (i % 2 == 0) {
            html += '<div class="finding first-row">';
          }
          else {
            html += '<div class="finding">';
          }
          html += '<div id="imagefindings'+i+'" class="image"><img class="loading" width="15" src="https://code.google.com/p/bbvatravellersgadgets/source/browse/trunk/Findings/images/lastfindings.jpg"/></div>';
          html += '<h3 id="summary'+i+'"><img class="loading" width="15" src="https://bbvagcs.googlecode.com/svn/trunk/img/loading.gif"/></h3>';
		  html += '<div id="topicname'+i+'"></div>';
          html += '<div class="footer">';
          html += '<div id="bbvatraveller'+i+'" class="bbvatraveller"><img class="loading" width="15" src="https://bbvagcs.googlecode.com/svn/trunk/img/loading.gif"/></div>';
          html += '<div id="urlmoreinfo'+i+'" class="urlmoreinfo"><img class="loading" width="15" src="https://bbvagcs.googlecode.com/svn/trunk/img/loading.gif"/></div>';
          html += '</div>';
          html += '</div>';

          document.getElementById("findingstopic").innerHTML += html;
        }

        for(var i = 0; i < filas; i++) {
		
		  var topicname = data.getValue(i,1);
		  //alert(data.getValue(i,1));
		 switch(topicname){
		  case 'Security': document.getElementById("topicname"+i).innerHTML = '<div id="security1" style="background-image:url(https://bbvatravellersgadgets.googlecode.com/svn/trunk/Findings/images/Images_Findings_Home/security_green.png);background-repeat:no-repeat;float:right;">'+topicname+'</div>';break;
		  case 'Banca':  document.getElementById("topicname"+i).innerHTML = '<div id="security1" style="background-image:url(https://bbvatravellersgadgets.googlecode.com/svn/trunk/Findings/images/Images_Findings_Home/security_green.png);background-repeat:no-repeat;float:right;">'+topicname+'</div>';break;
		  case 'Scouting':  document.getElementById("topicname"+i).innerHTML = '<div id="security1" style="background-image:url(https://bbvatravellersgadgets.googlecode.com/svn/trunk/Findings/images/Images_Findings_Home/security_green.png);background-repeat:no-repeat;float:right;">'+topicname+'</div>';break;
		  case 'Mobility':  document.getElementById("topicname"+i).innerHTML = '<div id="security1" style="background-image:url(https://bbvatravellersgadgets.googlecode.com/svn/trunk/Findings/images/Images_Findings_Home/security_green.png);background-repeat:no-repeat;float:right;">'+topicname+'</div>';break;
		  case 'Boundaries':  document.getElementById("topicname"+i).innerHTML = '<div id="security1" style="background-image:url(https://bbvatravellersgadgets.googlecode.com/svn/trunk/Findings/images/Images_Findings_Home/security_green.png);background-repeat:no-repeat;float:right;">'+topicname+'</div>';break;
		  case 'Technology':  document.getElementById("topicname"+i).innerHTML = '<div id="security1" style="background-image:url(https://bbvatravellersgadgets.googlecode.com/svn/trunk/Findings/images/Images_Findings_Home/security_green.png);background-repeat:no-repeat;float:right;">'+topicname+'</div>';break;
		  case 'Innovation':  document.getElementById("topicname"+i).innerHTML = '<div id="security1" style="background-image:url(https://bbvatravellersgadgets.googlecode.com/svn/trunk/Findings/images/Images_Findings_Home/security_green.png);background-repeat:no-repeat;float:right;">'+topicname+'</div>';break;
		  case 'Enterprise 2.0':  document.getElementById("topicname"+i).innerHTML = '<div id="security1" style="background-image:url(https://bbvatravellersgadgets.googlecode.com/svn/trunk/Findings/images/Images_Findings_Home/security_green.png);background-repeat:no-repeat;float:right;">'+topicname+'</div>';break;
		  case 'Payments':  document.getElementById("topicname"+i).innerHTML = '<div id="security1" style="background-image:url(https://bbvatravellersgadgets.googlecode.com/svn/trunk/Findings/images/Images_Findings_Home/security_green.png);background-repeat:no-repeat;float:right;">'+topicname+'</div>';break;
		}
		  
          document.getElementById("urlmoreinfo"+i).innerHTML = '<a href="'+data.getValue(i,5)+'">More Info</a>';
          document.getElementById("summary"+i).innerHTML = data.getValue(i,6);
          document.getElementById("bbvatraveller"+i).innerHTML = "<b>BBVA Traveller -</b> "+data.getValue(i,3);
          document.getElementById("imagefindings"+i).innerHTML ='<img border="0" src="' + data.getValue(i,4) +'">';
        }
      }
    </script>
